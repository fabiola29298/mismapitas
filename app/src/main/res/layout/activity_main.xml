<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.faviolapc.mismaps.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="hola mundo!!!! ahahahahhahahahahhaaha"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:id="@+id/tvTexto"
        android:text="IR a los mapas"
        android:onClick="ir_maps"

        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mapas dos"
        android:id="@+id/tvTexto2"
        android:onClick="ir_maps2"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/tvTexto"
        android:layout_alignEnd="@+id/tvTexto" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="mapas tres"
    android:id="@+id/tvTexto3"
    android:onClick="ir_maps3"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tvTexto2"
        android:layout_alignRight="@+id/tvTexto2"
        android:layout_alignEnd="@+id/tvTexto2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="propaganda LOL"
        android:onClick="ir_mpp"
        android:id="@+id/tvTexto4"
        android:layout_below="@+id/tvTexto3"
        android:layout_alignLeft="@+id/tvTexto3"
        android:layout_alignStart="@+id/tvTexto3"
        android:layout_marginTop="19dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="plus progra3"
        android:onClick="ir_plus"
        android:id="@+id/tvTexto5"
        android:layout_below="@+id/tvTexto3"
        android:layout_alignLeft="@+id/tvTexto3"
        android:layout_alignStart="@+id/tvTexto3"
        android:layout_marginTop="15dp" />
</RelativeLayout>
